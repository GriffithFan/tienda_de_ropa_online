# ================================================
# KIRA STORE - Variables de Entorno
# ================================================
# Copia este archivo a .env.local y completa los valores

# ------------------------------------------------
# Configuracion de la Aplicacion
# ------------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME="KIRA Store"

# ------------------------------------------------
# MercadoPago
# ------------------------------------------------
# Obtene tus credenciales en: https://www.mercadopago.com.ar/developers/panel
# Para desarrollo usa credenciales de TEST

# Access Token (privado - nunca expongas en el cliente)
MERCADOPAGO_ACCESS_TOKEN=TEST-XXXXXXXXXX-XXXXXXXX-XXXXXXXXXXXXXXX

# Public Key (publica - se puede usar en el cliente)
NEXT_PUBLIC_MERCADOPAGO_PUBLIC_KEY=TEST-XXXXXXXX-XXXX-XXXX-XXXX-XXXXXXXXXXXX

# ------------------------------------------------
# Base de Datos (ejemplo con PostgreSQL/Prisma)
# ------------------------------------------------
# DATABASE_URL="postgresql://user:password@localhost:5432/kira_store"

# ------------------------------------------------
# Email (ejemplo con Resend)
# ------------------------------------------------
# RESEND_API_KEY=re_XXXXXXXXX

# ------------------------------------------------
# Analytics (opcional)
# ------------------------------------------------
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
